{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "UML GLSP VSCode Extension (External GLSP Server)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/workspace",
        "--extensionDevelopmentPath=${workspaceFolder}/packages/uml-vscode-integration/extension"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/uml-vscode-integration/extension/lib/*.js"
      ],
      "sourceMaps": true,
      "env": {
        "GLSP_SERVER_DEBUG": "true",
        "GLSP_SERVER_PORT": "5007"
      }
    }
  ]
}
